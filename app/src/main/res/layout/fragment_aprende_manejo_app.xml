<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/telederma_text_view_formulario_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8sp"
                android:paddingRight="8sp"
                android:paddingBottom="8sp"
                android:paddingTop="24sp"
                android:textAlignment="center"
                android:text="@string/aprende_manejo_app_mensaje" />

            <LinearLayout
                android:id="@+id/btn_video_tutorial"
                android:weightSum="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="12sp"
                    android:paddingBottom="12sp"
                    android:background="@drawable/subtitle"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="10pt"
                        android:layout_weight="8"
                        android:paddingLeft="16sp"
                        android:text="@string/aprende_video_manejo_app"
                        android:textColor="@color/colorPrimaryDark" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:padding="@dimen/pading"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="35sp"
                            android:layout_height="35sp"
                            android:background="@drawable/ic_next"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_manual_usuario"
                android:weightSum="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="12sp"
                    android:paddingBottom="12sp"
                    android:background="@drawable/subtitle"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="10pt"
                        android:layout_weight="8"
                        android:paddingLeft="16sp"
                        android:text="@string/aprende_manual_usuario"
                        android:textColor="@color/colorPrimaryDark" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:padding="@dimen/pading"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="35sp"
                            android:layout_height="35sp"
                            android:background="@drawable/ic_next"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>
