<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4sp"
    android:paddingBottom="4sp">

    <TextView
        android:id="@+id/lbl_titulo"
        style="@style/telederma_text_view_formulario_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/detalle_consulta_requerimientos"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/lbl_tipo"
        style="@style/telederma_text_view_formulario_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_titulo"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/lbl_comentario"
        style="@style/telederma_text_view_formulario_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_tipo"
        android:visibility="gone"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8sp"
        android:layout_below="@id/lbl_comentario"
        android:weightSum="10">

        <Button
            android:id="@+id/btn_descartar_requerimiento"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:text="@string/detalle_consulta_descartar_requerimiento"
            style="@style/telederma_button" />

        <Button
            android:id="@+id/btn_resolver"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/detalle_consulta_resolver"
            style="@style/telederma_button"
            android:layout_marginLeft="5dp"
            android:layout_weight="3" />

    </LinearLayout>

</RelativeLayout>