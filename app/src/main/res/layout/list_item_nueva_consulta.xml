<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/list_item" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/doble_fondo"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:id="@+id/ll_nueva_consulta">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/consultas_nueva_consulta_agregar"
            android:textColor="@color/white"
            android:textSize="8pt"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginBottom="7dp"
            android:id="@+id/btn1"/>

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="49dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ico_agregar_consulta"
            android:id="@+id/btn2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/consultas_nueva_consulta_consulta"
            android:textColor="@color/white"
            android:textSize="8pt"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginBottom="7dp"
            android:id="@+id/btn3"/>


    </LinearLayout>

</LinearLayout>