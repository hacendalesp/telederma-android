<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    app:contentPadding="10dp"
    android:background="@drawable/round_gray_background"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <!--card_view:cardUseCompatPadding="true"-->
    <!--app:cardBackgroundColor="#ACACAC"-->
    <!---->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:orientation="vertical">

            <TextView android:id="@+id/tv_date_label"
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_requirement_label_date" />

            <TextView android:id="@+id/tv_date"
                style="@style/telederma_text_view_formulario_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fecha" />

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre" />

            <TextView android:id="@+id/tv_name"
                style="@style/telederma_text_view_formulario_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de tabla" />

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado" />

            <TextView android:id="@+id/tv_status"
                style="@style/telederma_text_view_formulario_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="estado" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:orientation="vertical">

            <Button android:id="@+id/btn_retry"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                style="@style/telederma_button_light"
                android:textSize="12dp"
                android:text="Reintentar"/>

            <Button android:id="@+id/btn_skip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="4dp"
                android:textSize="12dp"
                style="@style/telederma_button"
                android:text="Omitir"/>

            <Button android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="4dp"
                android:textSize="12dp"
                style="@style/telederma_button_red"
                android:textColor="@color/white"
                android:text="Borrar"/>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>

