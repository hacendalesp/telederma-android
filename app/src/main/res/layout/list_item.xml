<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4sp"
        android:paddingBottom="4sp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="10"
        android:background="@color/gray">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_item_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Control"
                android:textSize="7pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_item_descripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consultas_controles"
                    android:textSize="6pt" />

                <TextView
                    android:id="@+id/txt_item_cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="6pt"
                    android:paddingLeft="5dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_item_fecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="25/06/2018"
            android:textSize="7pt"
            android:gravity="center"
            android:layout_weight="3.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/pading"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_item_estado"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/ic_warning"
                android:scaleType="fitXY"
                android:backgroundTint="@color/grayLight" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>