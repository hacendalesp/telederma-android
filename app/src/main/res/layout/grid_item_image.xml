<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_imagen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/round_white_background">

    <ImageView
        android:id="@+id/img_imagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter" />
        <!--android:src="@android:drawable/ic_menu_report_image"-->

    <Button android:id="@+id/btn_edited"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentBottom="true"
        android:textSize="12dp"
        style="@style/telederma_button_light"
        android:visibility="gone"
        android:text="Especialista"/>

    <Button android:id="@+id/btn_dermatoscopia"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        style="@style/telederma_button_orange_light"
        android:text="Imágenes\n dermatoscópicas"
        android:visibility="gone"/>

</RelativeLayout>