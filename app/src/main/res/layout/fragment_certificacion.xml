<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp"
        android:orientation="vertical">

        <TextView
            style="@style/telederma_text_view_formulario_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aprende_certificacion_mensaje" />

        <TextView
            style="@style/telederma_text_view_formulario_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:textSize="7pt"
            android:text="@string/aprende_certificacion_notas" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:background="@drawable/round_gray_background"
            android:orientation="vertical">

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aprende_certificacion_pregunta_1" />

            <RadioGroup
                android:id="@+id/rdg_pregunta_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp">

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:background="@drawable/round_gray_background"
            android:orientation="vertical">

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aprende_certificacion_pregunta_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginTop="8sp"
                android:background="@drawable/certificacion_pregunta_2"
                android:scaleType="centerCrop" />

            <RadioGroup
                android:id="@+id/rdg_pregunta_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp">

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:background="@drawable/round_gray_background"
            android:orientation="vertical">

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aprende_certificacion_pregunta_3" />

            <RadioGroup
                android:id="@+id/rdg_pregunta_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp">

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:background="@drawable/round_gray_background"
            android:orientation="vertical">

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aprende_certificacion_pregunta_4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="380dp"
                android:layout_marginTop="8sp"
                android:background="@drawable/certificacion_pregunta_4"
                android:scaleType="centerCrop" />

            <RadioGroup
                android:id="@+id/rdg_pregunta_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp">

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:background="@drawable/round_gray_background"
            android:orientation="vertical">

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aprende_certificacion_pregunta_5" />

            <RadioGroup
                android:id="@+id/rdg_pregunta_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp">

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:background="@drawable/round_gray_background"
            android:orientation="vertical">

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aprende_certificacion_pregunta_6" />

            <RadioGroup
                android:id="@+id/rdg_pregunta_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp">

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:background="@drawable/round_gray_background"
            android:orientation="vertical">

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aprende_certificacion_pregunta_7" />

            <RadioGroup
                android:id="@+id/rdg_pregunta_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:orientation="horizontal">

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:background="@drawable/round_gray_background"
            android:orientation="vertical">

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aprende_certificacion_pregunta_8" />

            <RadioGroup
                android:id="@+id/rdg_pregunta_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:orientation="horizontal">

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:background="@drawable/round_gray_background"
            android:orientation="vertical">

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aprende_certificacion_pregunta_9" />

            <RadioGroup
                android:id="@+id/rdg_pregunta_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp">

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:background="@drawable/round_gray_background"
            android:orientation="vertical">

            <TextView
                style="@style/telederma_text_view_formulario_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aprende_certificacion_pregunta_10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="8sp"
                android:background="@drawable/certificacion_pregunta_10"
                android:scaleType="centerCrop" />

            <RadioGroup
                android:id="@+id/rdg_pregunta_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp">

            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/btn_enviar_respuestas"
            style="@style/telederma_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:text="@string/aprende_certificacion_enviar" />

    </LinearLayout>

</ScrollView>