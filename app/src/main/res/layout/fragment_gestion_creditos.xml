<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:contexto="com.telederma.gov.co.fragments.GestionCreditosFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="32sp"
        android:src="@drawable/icono_creditos" />

    <TextView
        style="@style/telederma_text_view_formulario_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:layout_marginBottom="16sp"
        android:textStyle="bold"
        android:text="@string/detalle_creditos_cargados" />

    <TextView
        style="@style/telederma_text_view_formulario_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total"/>

    <TextView
        style="@style/telederma_text_view_formulario_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:layout_marginBottom="16sp"
        android:textStyle="bold"
        android:text="@string/detalle_creditos_disponibles" />

    <TextView
        style="@style/telederma_text_view_formulario_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/consumidos"/>

</LinearLayout>


