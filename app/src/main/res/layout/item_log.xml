<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_product"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView android:id="@+id/tv_id"
            android:layout_width="@dimen/padding_small_10dp"
            android:layout_weight=".1"
            android:layout_height="wrap_content"
            android:text="id"/>
        <TextView android:id="@+id/tv_name_table"
            android:layout_width="@dimen/padding_small_10dp"
            android:layout_weight=".1"
            android:layout_height="wrap_content"
            android:text="Tabla"/>
        <TextView android:id="@+id/tv_status"
            android:layout_width="@dimen/padding_small_10dp"
            android:layout_weight=".1"
            android:layout_height="wrap_content"
            android:text="Estado"/>
        <TextView android:id="@+id/tv_id_local"
            android:layout_width="@dimen/padding_small_10dp"
            android:layout_weight=".1"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:text="IdLocal/Servidor"/>
    </LinearLayout>



</LinearLayout>

